!!! 5
html
    head
        - if (apiInfo.name)
            - var title = apiInfo.name + ' API Documentation'
        -else
            - var title = 'Intuit IDS Explorer - Live Documentation'
        title=title
        link(rel='stylesheet', href='/stylesheets/prettify.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src='/javascripts/jquery-1.7.2.min.js')
        script(src='/javascripts/jquery-1.7.2.js')
        script(type='text/javascript', src='https://appcenter.intuit.com/Content/IA/intuit.ipp.anywhere.js')

    body(style='position:relative;')
        div(class='preload', align='center', id='preloadId')
            img(src='/images/preloader2.gif', align='Loading', class='preloader')
        div(class='wrapper')
            header
                div(class='header')
                    div(class='logo')
                        - var logoTitle = ''
                        - if (apiInfo.name)
                            - logoTitle = 'Navigate to home page'
                        a(href='/', title=logoTitle)
                            img(src='/images/intuit-logo.png', align='Intuit | Small business, rejoice.')
                    div(class='login')
                        form(method='get')
                            - if (loginInfo)
                                span(class='loggedinText')
                                    b='Welcome '
                                    span=loginInfo.displayName
                                span(class='separator')
                                input(name='logout', value='Logout', type='button', class='button', onclick="return intuit.ipp.anywhere.logout(function () { window.location.href = '/logout' });")
                            - else
                                ipp:login(href="/openid/intuit")
                            - if (apiInfo.name)
                                span(class='separator')
                                a(class='homeIcon', href='/', title='Navigate to home page')
                                    img(src='/images/homeIcon.png')

            !{body}
            footer
               div(class = 'footer')
                  div(class = 'footerText') !{appConfig.footerMsg}
        script(src='/javascripts/json2.js')
        script(src='/javascripts/preloader.js')
        - if (apiInfo.name)
            script(src='/javascripts/utilities.js')
            script(src='/javascripts/livedocs.js')
            script(src='/javascripts/docs.js')
